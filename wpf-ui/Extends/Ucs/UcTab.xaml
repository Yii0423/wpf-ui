<UserControl x:Class="wpf_ui.Extends.Ucs.UcTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:diy="clr-namespace:wpf_ui.Extends.DiyControls"
             mc:Ignorable="d" d:DesignHeight="40" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <Border Background="{StaticResource BrushPrimary}" BorderBrush="{StaticResource BrushCold}" BorderThickness="0,0.5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="1" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel x:Name="SpMain" Orientation="Horizontal">
                <diy:DiyRadioButton Margin="0.5,0,0,0" ShowCloseButton="False" IsChecked="True">
                    <RadioButton.Content>
                        <Path Style="{StaticResource Icon}" Fill="{StaticResource BrushCold}" Data="{StaticResource Icon-Home}" Width="30" Height="14"/>
                    </RadioButton.Content>
                </diy:DiyRadioButton>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
