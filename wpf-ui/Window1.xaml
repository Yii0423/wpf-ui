<Window xmlns:Ucs="clr-namespace:wpf_ui.Extends.Ucs" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:diy="clr-namespace:wpf_ui.Extends.DiyControls" 
        x:Class="wpf_ui.Window1"
        mc:Ignorable="d" Title="Window1" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Loaded="Window1_OnLoaded">
    <Grid>
        <diy:DiyTextbox x:Name="TxtDate" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Icon="{StaticResource Icon-Calendar}"
                                VerticalAlignment="Top" Width="300" WaterMark="YYYY-MM-dd" Style="{StaticResource TbPrimary}"/>
        <diy:DiyButton Content="测试日期" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Width="75" 
                       Style="{StaticResource BtnPrimary}"/>
    </Grid>
</Window>
